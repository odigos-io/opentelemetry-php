{
  "name": "odigos/opentelemetry-php-8.1",
  "description": "Odigos distribution of OpenTelemetry for PHP 8.1.x",
  "type": "library",
  "require": {
    "php": ">=8.1 <8.2",
    "ext-opentelemetry": "*",
    "open-telemetry/api": "^1.2.3",
    "open-telemetry/sdk": "^1.2.4",
    "open-telemetry/exporter-otlp": "^1.2.1",
    "open-telemetry/opentelemetry-auto-codeigniter": "^0.0.9",
    "symfony/http-client": "^6.4",
    "nyholm/psr7": "^1.8"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "tbachert/spi": true
    }
  }
}
